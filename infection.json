{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "src"
        ]
    },
    "timeout": 2,
    "logs": {
        "stryker": {
            "report": "/^\\d+\\.x$/"
        }
    },
    "mutators": {
        "@default": true,
        "@number": false,
        "global-ignoreSourceCodeByRegex": [
            "\\\\assert\\(.+\\);"
        ],
        "MatchArmRemoval": {
            "ignore": [
                "OpenSpout\\Writer\\XLSX\\Options::setPaperSize"
            ]
        }
    }
}
